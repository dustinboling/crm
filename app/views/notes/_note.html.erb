<h6 style="text-transform: uppercase; font-weight: 600;"><%= link_to note.contact.full_name, profile_contact_path(current_user, note.contact) %></h6>
<p style="border-bottom: 2px solid #777; margin-bottom: 5px;">
  <%= note.content.gsub("\n", "<br>").html_safe %><br>
  <span style="font-weight: 700;"><%= note.user.email %></span> @ <%= note.created_at.strftime("%d %b, %Y %l:%M:%S %p") %><br>
</p>
