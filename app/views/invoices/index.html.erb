<h1 class="subtitle">Invoices</h1>
<%= link_to "+ New Invoice", new_profile_invoice_path, class: "btn" %>

<table class="table pad-reg">
  <thead>
    <tr>
      <th>Date Issued</th>
      <th>Invoice #</th>
      <th>PO #</th>
      <th>Discount</th>
      <th>Terms</th>
      <th>Total</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @invoices.each do |i| %>
    <tr>
      <td><%= i.date_issued %></td>
      <td><%= i.invoice_number %></td>
      <td><%= i.po_number %></td>
      <td><%= i.discount %></td>
      <td><%= i.terms %></td>
      <td><%= number_to_currency(i.total_price) %></td>
      <td>
        <%= link_to "Show", profile_invoice_path(1, i) %>
        <%= link_to "Edit", edit_profile_invoice_path(1, i) %>
        <%= link_to "Destroy", profile_invoice_path(1, i), method: :delete, confirm: "Are you sure you want to delete this invoice?" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
